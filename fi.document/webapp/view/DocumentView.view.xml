<mvc:View controllerName="cl3.syncyoung.fi.doc.fi.document.controller.DocumentView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:vl="sap.ui.layout"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}" enableScrolling="false" class="sapUiContentPadding">
        <vl:Grid defaultSpan="XL6 L6 M12 S12" width="100%">

            <!-- 첫 번째 Panel -->
            <Panel class="marginPanel">
                <headerToolbar>
                    <Toolbar class="customToolbar">
                        <Label text="{i18n>panelTitle}" design="Bold"/>
                    </Toolbar>
                </headerToolbar>
                <VBox>
                    <HBox>
                        <Label text="전표 번호:　　　" class="centeredText" design="Bold"/>
                        <!-- Input 요소들 -->
                        <Input id="docno" width="250px" placeholder="전표 번호를 입력하세요" showValueHelp="false" valueHelpRequest=".onValueHelpRequest"/>
                    </HBox>
                    <HBox>
                        <Label text="BP Code:　　　" class="centeredText" design="Bold"/>
                        <!-- Input id="IMatnr" width="200px" placeholder="자재코드"/-->
                        <ComboBox id="Bpcode" 
                                width="250px"
                                placeholder="Bpcode를 입력하세요" 
                                showSecondaryValues= "true"
                                items="{
                                            path: 'Bpcode>/'
                                        }">
                            <core:ListItem key="{Bpcode>Bpcode}" text="{Bpcode>Bpcode}" additionalText="{Bpcode>Cname}" />
                        </ComboBox>
                    </HBox>
                    
                    <!-- HBox로 버튼을 오른쪽 끝에 정렬 -->
                    <HBox justifyContent="End">
                        <Button text="조회"   icon="sap-icon://search" press="onSearch" />
                        <Text text="　"/>
                        <Button text="초기화" icon="sap-icon://refresh" press="onReset" />
                    </HBox>
                </VBox>
            </Panel>

            <!-- 두 번째 Panel
            <Panel class="marginPanel">
                <headerToolbar>
                    <Toolbar class="customToolbar">
                        <Label text="{i18n>panelTitle2}" design="Bold"/>
                    </Toolbar>
                </headerToolbar>
                <VBox>
                    <HBox>
                        <core:Icon src="sap-icon://cart"
                                   color="#DF0101"/>
                        <Text text="　" />
                        <Label text="구매 요청 대기" design="Bold"/>
                    </HBox>
                    <Text text="" />
                    <HBox>
                        <core:Icon src="sap-icon://cart-3"
                                   color="#D7DF01"/>
                        <Text text="　" />
                        <Label text="구매 요청 진행" design="Bold"/>
                    </HBox>
                    <Text text="" />
                    <HBox>
                        <core:Icon src="sap-icon://cart-approval"
                                   color="#01DF01"/>
                        <Text text="　" />
                        <Label text="자재 입고 완료" design="Bold"/>
                    </HBox>
                </VBox>
            </Panel> -->

        </vl:Grid>

        <vl:Grid defaultSpan="XL12 L12 M12 S12" >

            <Panel>
            <headerToolbar>
                <Toolbar class="customToolbar">
                    <Label text="{i18n>panelTitle3}" design="Bold"/>
                </Toolbar>
            </headerToolbar>
            <t:Table id="headerlist"
                     rows="{/DocumentSet}"
                     selectionMode="None"
                     paste="onPaste"
                     ariaLabelledBy="title"
                     width="auto">
                <t:columns>
                    <t:Column width="7%" hAlign="Center">
                        <Label text="회계 연도" design="Bold"/>
                        <t:template>
                            <!-- <core:Icon src="{path: 'Insst', formatter: '.statusIconColor'}" 
                                    color="{path: 'Insst', formatter: '.statusIconColorCSS'}" /> -->
                            <Text text="2024" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="10%" hAlign="Center">
                        <Label text="Bpcode" design="Bold"/>
                        <t:template>
                            <Text text="{Bpcode}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="12%" hAlign="Center">
                        <Label text="전표 번호" design="Bold"/>
                        <t:template>
                             <Text text="{Belnr}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="10%" hAlign="Center">
                        <Label text="Buzei" design="Bold"/>
                        <t:template>
                            <Text text="{Buzei}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="8%" hAlign="Center">
                        <Label text="반제 전표 번호" design="Bold"/>
                        <t:template>
                            <Text text="{Augbl}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="27%">
                        <Label text="전표 헤더 텍스트" design="Bold"/>
                        <t:template>
                            <Text text="{Bktxt}" wrapping="false"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="20%" hAlign="Center">
                        <Label text="금액" design="Bold"/>
                        <t:template>
                            <Text text="{Price}" />
                        </t:template>
                    </t:Column>
                    <!-- <t:Column width="15%" hAlign="Center">
                        <Label text="제품납기일" design="Bold"/>
                        <t:template>
                            <Text text="{
                                path: 'Pddld',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'long',
                                    source: {
                                        pattern: 'yyyy/MM/dd'
                                    }
                                }
                            }" />
                        </t:template>
                    </t:Column> -->
                    <t:Column width="10%" hAlign="Center">
                        <Label text="담당자" design="Bold"/>
                        <t:template>
                            <Text text="{EmpNum}" wrapping="false" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
            </Panel>
        </vl:Grid>
        <footer>
            <OverflowToolbar id="footerToolbar">
                <Button text="정보" icon="sap-icon://hint" press="onInfoConfirm" type="Ghost"/>
            </OverflowToolbar>
        </footer>

    </Page>
</mvc:View>
